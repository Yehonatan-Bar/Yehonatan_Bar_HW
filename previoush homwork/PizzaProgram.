
public class PizzaProgram {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Pizza pizza1 = new Pizza(4, 5, 0);
		Pizza pizza2 = new Pizza(1, 1, 0);
		Pizza pizza3 = new Pizza(5, 5, 5);
		Pizza pizza4 = new Pizza(2, 3, 4);
		Pizza pizza5 = new Pizza(4, 4, 5);

		System.out.println((pizza1.isBasicPizza()));
		System.out.println((pizza2.isBasicPizza()));
		System.out.println((pizza3.isBasicPizza()));
		System.out.println((pizza4.isBasicPizza()));
		System.out.println((pizza5.isBasicPizza()));
	
		pizza1.print();
		pizza2.print();
		pizza3.print();
		pizza4.print();
		pizza5.print();
		
		int allToppings = pizza1.getToppings() + pizza2.getToppings() + pizza3.getToppings() + pizza4.getToppings()
				+ pizza5.getToppings();

		System.out.println("the number of all the toppings is " + allToppings);
	}
}
